<?xml version="1.0"?>
<launch>
    <arg name="view" default="false"/>
    <!-- カメラを起動して画像データをSubscribeする -->
    <node name="my_camera" pkg="usb_cam" type="usb_cam_node">
        <param name="pixel_format" value="yuyv" />
        <param name="image_width" value="640" />
        <param name="image_height" value="480" />
        <param name="video_device" value="/dev/video4" />
        <param name="camera_info_url" value="file://$(find takane_ros_sample)/config/pc_front_camera.yaml"/>
    </node>
    <!-- Subscribeした画像データを補正して/image_proc topicとしてpublishする -->
    <group ns="my_camera">
        <node name="image_proc" pkg="image_proc" type="image_proc" output="screen">
            <remap from="image_raw" to="/my_camera/image_raw"/>
            <remap from="camera_info" to="/my_camera/camera_info"/>
        </node>
    </group>
    <!-- Subscribeした/image_procからapriltagを検出し、tfをpublishする -->
    <include file="$(find takane_ros_sample)/launch/continuous_detection.launch">
        <arg name="camera_name" value="/my_camera" />
    </include>
    <!-- 画像データを表示するか -->
    <group if="$(arg view)">
        <node name="image_view" pkg="image_view" type="image_view" >
            <remap from="image" to="/my_camera/image_raw"/>
        </node>
    </group>
    <group unless="$(arg view)">
        <node pkg="rviz" type="rviz" name="rviz" args="-d $(find takane_ros_sample)/config/rviz.rviz"/>
    </group>
</launch>